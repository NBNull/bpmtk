<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Bpmtk.Engine"
                   namespace="Bpmtk.Engine.Repository">

  <class name="ProcessDefinition" table="bpm_proc_def"
         dynamic-update="true">
    <id name="Id" column="id">
      <generator class="identity"/>
    </id>
    <property name="Key" column="`key`" not-null="true" length="64"/>
    <property name="Name" column="name" length="100" not-null="true"/>
    <property name="State" column="state" type="ProcessDefinitionState" not-null="true"/>
    <property name="OrganizationId" column="org_id"/>
    <property name="CategoryId" column="category_id"/>
    <property name="HasDiagram" column="has_diagram" not-null="true"/>
    <property name="ValidFrom" column="valid_from"/>
    <property name="ValidTo" column="valid_to"/>
    <property name="Version" column="version" not-null="true"/>
    <property name="Created" column="created" not-null="true"/>
    <property name="Tag" column="tag" length="255"/>
    <property name="Description" column="description" length="255"/>
    <!--<many-to-one name="Package"
               class="Package"
               column="package_id" not-null="true"/>-->

    <many-to-one name="model"
                 class="Bpmtk.Engine.Models.ByteArray"
                 column="model_id"
                 access="field"/>

    <set name="identityLinks" inverse="true" cascade="all-delete-orphan"
         access="field">
      <key column="proc_def_id"/>
      <one-to-many class="Bpmtk.Engine.Models.DefinitionIdentityLink"/>
    </set>

    <!--
    
    <many-to-one name="token"
               class="Token"
               column="token_id"
               access="field"/>

    <many-to-one name="Initiator"
               class="Bpmtk.Engine.Models.User"
               column="initiator_id"/>

    <set name="variableInstances" inverse="true" cascade="all-delete-orphan"
         access="field">
      <key column="proc_inst_id"/>
      <one-to-many class="ProcessVariable"/>
    </set>-->
  </class>

</hibernate-mapping>
